{% extends 'backend/base.html.twig' %}

{% block top %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-12">
            <h2>Настройки главной страницы</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('cms') }}">Главная</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Настройки главной страницы</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-12">
                {% if mainPageVideoUrl is defined %}
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Текущее видео</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="media" style="max-width: 500px; margin: 0 auto;">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <video src="{{ mainPageVideoUrl }}" controls></video>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="ibox">
                    <div class="ibox-content">
                        <form action="{{ path('cms_settings_main_page') }}" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="main_page_video">Загрузите видео</label>
                                <input type="file" class="form-control-file" id="main_page_video" name="main_page_video">
                            </div>
                            <button type="submit" class="btn btn-primary">Загрузить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}