{% extends 'frontend/base.html.twig' %}

{% form_theme form _self %}

{% block image_widget %}
    <label class="d-block text-center font-weight-bold mb-3">Фото</label>
    <div class="d-flex flex-row flex-lg-column align-items-center">

        <div class="page-profile__avatar-image d-flex justify-content-center mb-0 mb-lg-4">
            <div>
                {% if image is defined and image %}
                    <img alt="" src="{{ image }}" />
                {% else %}
                    <img alt="" src="/lib/images/avatar.jpeg" />
                {% endif %}
            </div>
        </div>

        <div class="page-profile__avatar-text text-center">
            <input type="file" class="form-control-file" {{ block('widget_attributes') }}>
            <div class="d-none d-lg-block text-grey mb-1">Перетащите сюда</div>
            <div class="d-none d-lg-block text-grey mb-1">или</div>
            <div class="text-violet text-uppercase font-weight-bold">
                <small>Выберите файл для загрузки</small>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <nav class="breadcrumb-wrapper">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('index') }}">Главная</a>
                </li>
                <li class="breadcrumb-item">
                    Профайл
                </li>
            </ol>
        </div>
    </nav>

    <section class="page-profile mt-4 mb-4 mt-md-5 mb-md-5">
        <div class="container">
            <h2 class="mb-3 mb-md-4">Персональные данные</h2>
            <div class="page-profile__wrapper">
                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                {{ form_widget(form._token) }}
                <div class="page-profile__body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 col-lg-4 d-flex flex-column">
                                <div class="page-profile__avatar d-flex flex-column justify-content-center flex-grow-1">
                                    {{ form_widget(form.avatarFile) }}
                                </div>
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.lastname, 'Фамилия', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}
                                        {{ form_widget(form.lastname, { 'attr': { placeholder: 'Фамилия' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.name, 'Имя', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}
                                        {{ form_widget(form.name, { 'attr': { placeholder: 'Имя' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.middlename, 'Отчество', { 'label_attr': { 'class': 'font-weight-bold' }}) }}
                                        {{ form_widget(form.middlename, { 'attr': { placeholder: 'Отчество' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.cityName, 'Населённый пункт', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}
                                        {{ form_widget(form.cityName, { 'attr': { placeholder: 'Населённый пункт' }}) }}
                                        <div class="styled-checkbox-wrapper mt-3">
                                            <label class="styled-checkbox">
                                                <input autocomplete="off" id="dadata-foreign-city" type="checkbox" />
                                                <span class="checkmark"></span>
                                            </label>
                                            <label class="styled-checkbox-label" for="dadata-foreign-city">Иностранное государство</label>
                                        </div>
                                        <div class="error-text"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.email, 'E-mail', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}
                                        {{ form_widget(form.email, { 'attr': { placeholder: 'E-mail' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.phone, 'Телефон', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}
                                        {{ form_widget(form.phone, { 'attr': { placeholder: 'Телефон' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.mainSpecialtyId, 'Специальность', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}<br/>
                                        {{ form_widget(form.mainSpecialtyId, { 'attr': { 'data-placeholder': 'Выберите степень', class: 'select2' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5 d-none">
                                        {{ form_label(form.additionalSpecialtyId, 'Ученая степень', { 'label_attr': { 'class': 'font-weight-bold required' }}) }}<br/>
                                        {{ form_widget(form.additionalSpecialtyId, { 'disabled': 'disabled', 'attr': { 'data-placeholder': 'Выберите степень', class: 'select2' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4 mb-lg-5">
                                        {{ form_label(form.directionId, 'Направление', { 'label_attr': { 'class': 'font-weight-bold' }}) }}
                                        {{ form_widget(form.directionId, { 'attr': { 'data-placeholder': 'Выберите направление', class: 'select2' }}) }}
                                        <div class="error-text"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center page-profile__bottom text-center">
                    <button type="submit">Сохранить</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>

    <section class="page-profile mt-4 mb-4 mt-md-5 mb-md-5">
        <div class="container">
            <h2 class="mb-3 mb-md-4">Изменить пароль</h2>
            <div class="page-profile__wrapper">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(passwordForm) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(passwordForm) }}
                </div>
                {{ form_widget(passwordForm._token) }}
                <div class="page-profile__body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 col-lg-4 mb-4 mb-lg-0">
                                <label class="font-weight-bold required" for="profile-password0">Текущий
                                    пароль</label><br/>
                                {{ form_widget(passwordForm.password, { 'attr': { placeholder: 'Введите текущий пароль' }}) }}
                            </div>
                            <div class="col-12 col-lg-4 mb-4 mb-lg-0">
                                <label class="font-weight-bold required" for="profile-password1">Новый
                                    пароль</label><br/>
                                {{ form_widget(passwordForm.newPassword.first, { 'attr': { placeholder: 'Введите новый пароль' }}) }}
                            </div>
                            <div class="col-12 col-lg-4 mb-4 mb-lg-0">
                                <label class="font-weight-bold required" for="profile-password2">Повторите
                                    пароль</label><br/>
                                {{ form_widget(passwordForm.newPassword.second, { 'attr': { placeholder: 'Повторите ваш новый пароль' }}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center page-profile__bottom text-center">
                    <button type="submit">Сохранить</button>
                </div>
                {{ form_end(passwordForm) }}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        var cityInputId = 'customer_update_cityName';
        var dadataToken = '{{ dadata_token }}';
        var formPrefix = 'customer_update';
        var dadataGeoLocation = false;
    </script>
    <script type="text/javascript" src="/lib/scripts/profile.js"></script>
    <script type="text/javascript" src="/lib/scripts/city-suggest.js"></script>
{% endblock %}