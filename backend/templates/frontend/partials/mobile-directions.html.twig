<li class="menu-element arrow menu-directions">
    <div class="container">
        <a href="#" class="menu-element__link">
            {% if selectedDirection is same as(null) %}
                Все направления
            {% else %}
                {{ selectedDirection.name }}
            {% endif %}
        </a>
        <div class="submenu">
            <form id="mobile_directions_form" method="POST" action="" autocomplete="off">
                <label class="all" for="mobile-direction-all">
                    <input type="radio" name="direction" value="0" id="mobile-direction-all" {% if selectedDirection is same as(null) %} checked {% endif %}/>
                    <span>Все направления</span>
                </label>
                {% for item in list %}
                    <label for="mobile-direction-{{ item.id }}">
                        <input
                            type="radio"
                            name="direction"
                            value="{{ item.id }}"
                            id="mobile-direction-{{ item.id }}"
                            {% if selectedDirection is not same as(null) and selectedDirection.id == item.id %} checked {% endif %}
                        />
                        <span>{{ item.name }}</span>
                    </label>
                {% endfor %}
            </form>
        </div>
    </div>
</li>
